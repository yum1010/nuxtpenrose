<template>
 <polygon :points="points" :fill="onoff==1? 'pink' : 'cyan'" stroke="black" @click="toggle"></polygon>
</template>

<script>
  export default{
  props:['points'],
  }
</script>

Vue.component('tile',{
    template:'<polygon :points="points" :fill="onoff==1? \'pink\' : \'cyan\'" stroke="black" @click="toggle"></polygon>',
    props:['points','onoff'],
    methods:{
	toggle(){
	    this.$emit('toggle');
	}
    }
    /*
     <polygon v-for="(t,i) in rhombi"
	       @click="toggle(i)"
	       @mouseover="guide(i)"
